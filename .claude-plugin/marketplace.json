{
  "name": "claude-stack",
  "owner": {
    "name" : "Josef Hardi",
    "email": "josef.hardi@gmail.com",
    "url"  : "https://github.com/johardi"
  },
  "metadata": {
    "description": "My personal plugins for code development and standardization that provides reusable components, agents, and tools to maintain consistency across projects",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "cstack-essential",
      "source": "./plugins/cstack-essential",
      "description": "Essential development bundle with onboarding commands, GitHub issue analysis and fixes, audio notification hooks on Claude Code events, and integrated MCP servers",
      "version": "1.0.0",
      "homepage": "https://github.com/johardi/claude-stack",
      "repository": "https://github.com/johardi/claude-stack",
      "license": "MIT",
      "keywords": ["essential"],
      "category": "code-development",
      "strict": false,
      "agents": [
        "./debugger.md",
        "./github-actions-specialist.md"
      ],
      "commands": [
        "./commands/onboard.md",
        "./commands/issue.md"
      ],
      "hooks": {
        "Notification": [{
          "hooks": [{
              "type": "command",
              "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/play-sound/play_sound.py"
            }]
        }],
        "Stop": [{
          "hooks": [{
              "type": "command",
              "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/play-sound/play_sound.py"
            }]
        }],
        "PreToolUse": [{
          "matcher": "Edit|MultiEdit|Write|NotebookEdit|TodoWrite|Bash",
          "hooks": [{
              "type": "command",
              "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/play-sound/play_sound.py"
            }]
        }]
      },
      "mcpServers": {
        "serena": {
          "type": "stdio",
          "command": "sh",
          "args": [
            "-c",
            "uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --project \"$(pwd)\""
          ]
        },
        "context7": {
          "type": "stdio",
          "command": "npx",
          "args": ["-y", "@upstash/context7-mcp"]
        }
      }
    },
    {
      "name": "cstack-web",
      "source": "./plugins/cstack-web",
      "description": "Web development bundle with expert agents for React/Next.js frontend development, debugging, and cloud architecture. Includes specialists for modern UI/UX, performance optimization, and infrastructure design.",
      "version": "1.0.0",
      "homepage": "https://github.com/johardi/claude-stack",
      "repository": "https://github.com/johardi/claude-stack",
      "license": "MIT",
      "keywords": ["web", "development"],
      "category": "code-development",
      "strict": false,
      "agents": [
        "./frontend-developer.md",
        "./cloud-architect.md"
      ]
    },
    {
      "name": "cstack-java",
      "source": "./plugins/cstack-java",
      "description": "Java development bundle with expert agents for Java 18+ enterprise applications, Spring Boot, and microservices. Includes specialists for modern Java features, debugging, and cloud infrastructure design.",
      "version": "1.0.0",
      "homepage": "https://github.com/johardi/claude-stack",
      "repository": "https://github.com/johardi/claude-stack",
      "license": "MIT",
      "keywords": ["java", "development"],
      "category": "code-development",
      "strict": false,
      "agents": [
        "./java-pro.md"
      ]
    },
    {
      "name": "cstack-python",
      "source": "./plugins/cstack-python",
      "description": "Python development bundle with expert agents for Python 3.12+ applications, FastAPI, and async patterns. Includes specialists for modern Python features, performance optimization, debugging, and cloud infrastructure.",
      "version": "1.0.0",
      "homepage": "https://github.com/johardi/claude-stack",
      "repository": "https://github.com/johardi/claude-stack",
      "license": "MIT",
      "keywords": ["python", "development"],
      "category": "code-development",
      "strict": false,
      "agents": [
        "./python-pro.md"
      ]
    }
  ]
}
